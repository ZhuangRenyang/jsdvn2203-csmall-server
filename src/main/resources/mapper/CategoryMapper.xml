<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.jsdvn2203.csmall.server.mapper.CategoryMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO pms_category(name,
                                 parent_id,
                                 depth,
                                 keywords,
                                 sort,
                                 icon,
                                 enable,
                                 is_parent,
                                 is_display,
                                 gmt_create,
                                 gmt_modified)
        VALUES (#{name},
                #{parentId},
                #{depth},
                #{keywords},
                #{sort},
                #{icon},
                #{enable},
                #{isParent},
                #{isDisplay},
                #{gmtCreate},
                #{gmtModified})
    </insert>

    <delete id="deleteById">
        DELETE
        FROM pms_category
        WHERE id = #{id}
    </delete>

    <delete id="deleteByIds">
        DELETE
        FROM pms_category
        WHERE IN (
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>

    <!--    int countByName(String name);-->
    <select id="countByName" resultType="int">
        SELECT COUNT(*)
        FROM pms_category
        WHERE name = #{name}
    </select>

    <select id="countById" resultType="int">
        SELECT COUNT(*)
        FROM pms_category
        WHERE id = #{id}
    </select>

    <select id="list" resultMap="ListItemResultMap">
        SELECT
        <include refid="ListItemQueryFields"/>
        FROM pms_category
        ORDER BY id
    </select>

    <select id="getById" resultMap="detailResultMap">
        SELECT id,
               name,
               parent_id,
               keywords,
               depth,
               sort,
               icon,
               enable,
               is_parent,
               is_display,
               gmt_create,
               gmt_modified
        FROM pms_category
        WHERE id = #{id}
    </select>

    <resultMap id="detailResultMap" type="cn.tedu.jsdvn2203.csmall.server.pojo.vo.CategoryDetailVO">
        <result column="parent_id" property="parentId"></result>
        <result column="is_parent" property="isParent"></result>
        <result column="is_display" property="isDisplay"></result>
        <result column="gmt_create" property="gmtCreate"></result>
        <result column="gmt_modified" property="gmtModified"></result>
    </resultMap>

    <resultMap id="ListItemResultMap" type="cn.tedu.jsdvn2203.csmall.server.pojo.vo.CategoryListItemVO">
        <result column="parent_id" property="parentId"></result>
        <result column="is_parent" property="isParent"></result>
        <result column="is_display" property="isDisplay"></result>
        <result column="gmt_create" property="gmtCreate"></result>
        <result column="gmt_modified" property="gmtModified"></result>
    </resultMap>

    <sql id="ListItemQueryFields">
        <if test="true">
            id,
            name,
            parent_id,
            depth,
            keywords,
            sort,
            icon,
            enable,
            is_parent,
            is_display,
            gmt_create,
            gmt_modified
        </if>
    </sql>
</mapper>
